    <%- include('top_page') %>
    <h1><%= page_title %></h1>
    
    <table border="1">
        <thead>
            <tr>
                <th>עריכה</th>
                <th>שם</th>
                <th>שם משתמש</th>
                <th>אימייל</th>
                <th>מחיקה</th>
            </tr>
        </thead>
        <tbody>
            <% for(let user of users) { %>
                <tr>
                    <td><a href="/users/edit/<%= user.id %>">✏️</a></td>
                    <td><%= user.name %></td>
                    <td><%= user.user_name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <form action="/users/delete" method="post" onsubmit="return confirm('האם אתה בטוח שברצונך למחוק?');">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button type="submit">🗑️</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <div class="pagination">
        <% if(page > 0) { %>
            <a href="/users?p=<%= page - 1 %>">« הקודם</a>
        <% } %>
        <span>עמוד <%= page + 1 %> מתוך <%= total_pages %></span>
        <% if(page < total_pages - 1) { %>
            <a href="/users?p=<%= page + 1 %>">הבא »</a>
        <% } %>
    </div>

    <%- include('bottom_page') %>
    